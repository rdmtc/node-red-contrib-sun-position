{
	"compilerOptions": {
		"baseUrl": "./",
	 	"checkJs": true,
		"allowJs": true,
		"module": "commonJS",
		"target": "es6",
		"lib": [
			"es2019"
		],
		"paths": {
			"@types": ["nodes/types"],
			"@nodes": ["nodes"],
			"@static": ["nodes/static"]
		},
		"sourceMap": true,
		"alwaysStrict": true,
		"resolveJsonModule": true
	},
	"include": ["./nodes/types/typedefs.js", "./nodes/static/htmlglobal.js"],
	"exclude": ["node_modules", "**/node_modules/*", "temp", "**/temp/*", "backup", "**/backup/*", "examples", "**/examples/*"],
	"typeAcquisition": {
		"include": ["jquery", "jqueryui", "node-red"]
	}
  }